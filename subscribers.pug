extends ./views/layout/_dashboard
append stylesheet
  link(rel="stylesheet", href="./styles/subscribers.css")

block title
  title GoCast UI - Subscribers

block main
  -
    var table_subscribers = [
      {flb: "checkbox1", iip: "checkbox1", image: "./images/subscribers/subscribers_1.png", name: "Thomas L. Fletcher", bio: "I am a product designer", badge: "Producer", karma: "43"},
      {flb: "checkbox2", iip: "checkbox2", image: "./images/subscribers/subscribers_2.png", name: "Jerome Bell", bio: "Medical Assistant", badge: "Host", karma: "54"},
      {flb: "checkbox3", iip: "checkbox3", image: "./images/subscribers/subscribers_3.png", name: "Savannah Nguyen", bio: "Dog Trainer", badge: "Producer", karma: "546"},

      {flb: "checkbox4", iip: "checkbox4", image: "./images/subscribers/subscribers_2.png", name: "Devon Lane", bio: "Marketing Coordinator", badge: "Host", karma: "546"},
      {flb: "checkbox5", iip: "checkbox5", image: "./images/subscribers/subscribers_4.png", name: "Marvin McKinney", bio: "President of Sales", badge: "Producer", karma: "546"},
      {flb: "checkbox6", iip: "checkbox6", image: "./images/subscribers/subscribers_5.png", name: "Brooklyn Simmons", bio: "Web Designer", badge: "Host", karma: "3"}
    ];

  .subscribers
    h2.heading.subscribers-heading Subscribers
    .subscribers-table
      table
        thead
          tr
            th
              label(for="checkbox").checkbox-label
                input(type="checkbox" id="checkbox").checkbox-input
                .checkbox
                  include ./views/icons/_icon-check
            th Name
            th Bio
            th Badge
            th Karma
            th Follow
            th Link
        tbody
          each table_subscribers_item in table_subscribers
            +tableSubscribersItem(table_subscribers_item.flb, table_subscribers_item.iip, table_subscribers_item.image, table_subscribers_item.name, table_subscribers_item.bio, table_subscribers_item.badge, table_subscribers_item.karma)