  .episodes
    .episodes-top
      h2.heading.episodes-heading Episodes
      button.button
        include ./views/icons/_icon-cloud-upload
        span Upload New Episodes
      button.button.button-mobile
        include ./views/icons/_icon-cloud-upload
    .episodes-table
      table
        thead
          tr
            th
              label(for="checkbox").checkbox-label
                input(type="checkbox" id="checkbox").checkbox-input
                .checkbox
                  include ./views/icons/_icon-check
            th Thumbnail
            th Name
            th Duration
            th Audio Status
            th Publish Date
            th Status
            th Action
        tbody
          each table_episodes_item in table_episodes
            +tableEpisodesItem(table_episodes_item.for, table_episodes_item.id, table_episodes_item.image, table_episodes_item.heading, table_episodes_item.heading_1, table_episodes_item.desc, table_episodes_item.duration)
